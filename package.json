{
  "name": "import-pilot",
  "version": "1.0.0",
  "description": "CLI tool that scans your project and auto-fixes missing imports across JS/TS, Vue, Svelte, Astro, and Python.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "import-pilot": "./bin/import-pilot.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsc --watch",
    "start": "node bin/import-pilot.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "import",
    "auto-import",
    "import-pilot",
    "cli",
    "typescript",
    "javascript",
    "python",
    "code-quality"
  ],
  "author": "Yosef Hayim Sabag",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YosefHayim/auto-import-cli"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "@types/node": "^25.2.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "glob": "^13.0.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
